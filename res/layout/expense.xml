    >
    <TextView android:layout_width="wrap_content" android:textColor="#FFE87C" android:text="Click on the button to select the Date" android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_x="16dip" android:layout_y="110dip"></TextView>
